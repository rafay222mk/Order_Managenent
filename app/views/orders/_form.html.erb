
<div style=" display: flex; justify-content: center; background-color:  #f0f2f5">
  <div style="background-color:  white; padding: 50px; margin: 30px; border-radius: 10px; ">
    <%= form_with(model: order , local: false ) do |form| %>        
      <h2 style="text-align: center"  >
        <% if order.id.present? %>
          Edit 
        <% else %>
          Create
        <% end %>
          Product 
       </h2>
        <div class="modal-body">

          <div id="errorarea">
          </div>

          <div class="csform" >
            <%= form.label :Name %>
          </div>
          <div>
            <%= form.text_field :name %>
          </div>
          <br>
          </div>
            <div id="items">
            <%= form.fields_for :items do |item_form| %>
            <%= render 'item_fields', f: item_form %>
            <% end %>
          </div>
          <div style="text-align: right;" ,class="links" >
            <%= link_to_add_association 'Add item', form, :items, class: 'btn btn-primary' %>
          </div>         
          <br>
            <div class="modal-footer">
              <button type="button" class="btn btn-light close-modal" data-bs-dismiss="modal">Close</button>
            <%= form.submit  class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>

 